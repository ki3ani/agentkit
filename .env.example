# AgentKit Environment Configuration
# Copy this file to .env and fill in your actual API keys

# AI Model Provider API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
MISTRAL_API_KEY=your_mistral_api_key_here

# AWS Configuration (for cloud deployment)
AWS_DEFAULT_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_SESSION_TOKEN=your_aws_session_token_optional

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Agent Configuration
DEFAULT_MODEL=claude-3-sonnet
MAX_TOKENS=4000
TEMPERATURE=0.7

# Tool Configuration
WEB_SEARCH_API_KEY=your_web_search_api_key
MAX_TOOL_CALLS=10
TOOL_TIMEOUT=30

# Database Configuration (for advanced features)
DATABASE_URL=postgresql://localhost:5432/agentkit
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your_secret_key_for_jwt_tokens
ALLOWED_HOSTS=localhost,127.0.0.1